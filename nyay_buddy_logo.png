LOGO = Path("nyay_buddy_logo.png")
if LOGO.exists():
    b = LOGO.read_bytes()
    b64 = base64.b64encode(b).decode()
    st.markdown(
        f"""
        <style>
        .stApp {{
            background-image: url("data:image/png;base64,{b64}");
            background-size: 28%;
            background-position: right 8% top 8%;
            background-repeat: no-repeat;
            opacity: 0.98;
        }}
        </style>
        """,
        unsafe_allow_html=True
    )
